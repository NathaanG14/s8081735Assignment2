<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.s8081735assignment2.ui.login.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_loginFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.s8081735assignment2.ui.dashboard.DashboardFragment"
        android:label="Dashboard">
        <!-- keypass passed from login -->
        <argument
            android:name="keypass"
            app:argType="string" />
        <action
            android:id="@+id/action_dashboardFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.s8081735assignment2.ui.details.DetailsFragment"
        android:label="Details">
        <!-- Full photography entity -->
        <argument
            android:name="entity"
            app:argType="com.example.s8081735assignment2.data.model.Entity" />
    </fragment>
</navigation>
